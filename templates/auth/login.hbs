<div class="container">
  <h1 class="title">Login</h1>
  <form class="form" action="/login{{#if next_url }}?next={{next_url}}{{/if}}" method="post">
    <div class="field">
      <label class="label">Email</label>
      <div class="control">
        <input class="input {{#if errors.email}}is-danger{{/if}}" type="email" placeholder="Enter your email" name="email" id="email" value="{{form.email}}">
      </div>
      {{#with errors.email}}
      <ul class="help is-danger">
        {{#each this}}
        <li>
          {{message}}
        </li>
        {{/each}}
      </ul>
      {{/with}}
    </div>

    <div class="field">
      <label class="label">Password</label>
      <div class="control">
        <input class="input {{#if errors.password}}is-danger{{/if}}" type="password" placeholder="Enter your password" name="password" id="password" value="{{form.password}}">
      </div>
      {{#with errors.password}}
      <ul class="help is-danger">
        {{#each this}}
        <li>
          {{message}}
        </li>
        {{/each}}
      </ul>
      {{/with}}
    </div>

    <div class="field">
      <div class="control">
        <button class="button is-primary">Login</button>
      </div>
    </div>
  </form>
</div>