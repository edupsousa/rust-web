{{> layout/page_header }}
<body>
  {{#with navbar}}{{> layout/navbar }}{{/with}}
  {{#with content}}
  <div class="container">
    <h1 class="title">Profile</h1>
    <form class="form" action="/user/profile" method="post">

      <div class="field">
        <label class="label">Display Name</label>
        <div class="control">
          <input class="input {{#if errors.display_name}}is-danger{{/if}}" type="text" placeholder="Enter your display name" name="display_name" id="display_name" value="{{form.display_name}}">
        </div>
        {{#if errors.display_name}}
        <p class="help is-danger">{{errors.display_name}}</p>
        {{/if}}
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary">Save</button>
        </div>
      </div>
    </form>
  </div>
  {{/with}}
  {{> layout/messages }}
</body>
{{> layout/page_footer }}