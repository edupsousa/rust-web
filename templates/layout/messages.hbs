{{#if messages}}
<ul style="position: absolute; bottom: 0; right: 0" class="mb-2 mr-2">
  {{#each messages}}
  <li
    class="notification {{ class }}"
    x-data="{ isVisible: true }"
    x-show="isVisible"
    x-init="setTimeout(() => { isVisible = false }, 5000)"
    x-transition.duration.500ms
  >
    <button class="delete" x-on:click="isVisible = false"></button>
    {{ text }}
  </li>
  {{/each}}
</ul>
{{/if}}
